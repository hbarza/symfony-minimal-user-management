<form class="d-inline-block" method="post" action="{{ path('user_entity_delete', {'id': user_entity.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_entity.id) }}">
    <button class="btn btn-outline-danger mr-1">Delete</button>
</form>
