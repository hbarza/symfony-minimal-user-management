{% extends 'base.html.twig' %}

{% block title %}View Group{% endblock %}

{% block body %}
    <h1>View Group</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user_group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user_group.name }}</td>
            </tr>
